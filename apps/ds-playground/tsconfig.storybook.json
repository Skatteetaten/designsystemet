{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "vite-plugin-svgr/client", "vite/client"],
    "emitDecoratorMetadata": true,
    "outDir": "../../dist/out-tsc",
  },
  "files": [
    "../../node_modules/@nx/react/typings/styled-jsx.d.ts",
    "../../node_modules/@nx/react/typings/cssmodule.d.ts",
    "../../node_modules/@nx/react/typings/image.d.ts",
    "../../types/i18next.d.ts",
    "../../types/vite-env.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.js",
    "src/**/*.spec.tsx",
    "src/**/*.spec.jsx",
    "jest.config.ts"
  ],
  "include": [
    "src/**/*.stories.ts",
    "src/**/*.stories.js",
    "src/**/*.stories.jsx",
    "src/**/*.stories.tsx",
    "src/**/*.stories.mdx",
    ".storybook/*.js",
    ".storybook/*.ts",
    ".storybook/*.tsx",
    ".storybook/*.mdx",
    "**/*.d.ts"
  ]
}
